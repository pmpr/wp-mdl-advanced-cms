{{ selector }} {
    position: relative;
}

{{ selector }} .ratio {
    display: block;
    width: 100%;
    height: auto;
}

{{ selector }} .video-iframe-block {
    display: block;
    padding-top: 50%;
}

{{ selector }} iframe {
    top: 0;
    left: 0;
    border: none;
    width: 100%;
    position: absolute;
    height: 100%;
}
